@model DogGo.Models.ViewModels.WalkerDetailsViewModel

@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1 class="mb-4">Walker Profile</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src=@Model.Walker.ImageUrl />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Walker.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Walks</h1>

            <table class="table">
                @*<thead>
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Neighborhood)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ImageUrl)
                        </th>
                        <th></th>
                    </tr>
                </thead>*@
                <tbody>
                    
                    @foreach (Walk walk in Model.Walks)
                    {
                        <li class="list-group-item disabled" aria-disabled="true">
                            <span class="font-weight-bold ml-4">@walk.Date</span>
                            <span class="font-weight-bold ml-4">@walk.Dog.Name</span>
                            @{
                                int durationInSeconds = walk.Duration;
                                int durationInMinutes = durationInSeconds / 60;
                            }
                            <span class="font-weight-bold ml-4">@durationInMinutes min</span>
                        </li>
                    }
                </tbody>
            </table>
            @*<div class="row">
                <ul class="list-group mt-4">
                    @foreach (Walk walk in Model.Walks)
                    {
                        <li class="list-group-item disabled" aria-disabled="true">
                            <span class="font-weight-bold ml-4">@walk.Date</span>
                        </li>
                    }
                </ul>
            </div>*@
        </section>

        <section class="col-lg-4 col-md-8 container mt-5">
            <h1>Total Walk Time</h1>
                <div>@Model.Walker.HoursMinutes minutes</div>
            
        </section>
    </div>
</div>